<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_lead_view_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="after">
                <page name="financials" string="Financials">
                    <group>
                        <field name="x_base_currency_id" invisible="1"/>
                        <group string="Solution">
                            <!--    SOLUTION REVENUE    -->
                            <field name="x_solution_revenue" widget="rounded_monetary"/>
                            <field name="x_solution_revenue_tax" string="Tax Type"/>
                            <field name="x_solution_revenue_tax_amount" string="Tax" widget="rounded_monetary"/>
                            <field name="x_final_solution_revenue" string="Total" widget="rounded_monetary"/>
                            <field name="x_wht_solution"/>
                            <field name="x_wht_solution_amount" string="WHT" widget="rounded_monetary"/>
                        </group>
                        <group string="Supplier">
                            <!--    SOLUTION COST   -->
                            <field name="x_solution_cost" string="Supplier Cost" widget="rounded_monetary"/>
                            <field name="x_nrt_applicable" string="Tax"/>
                            <field name="x_nrt" widget="rounded_monetary"/>
                            <field name="x_gp_on_license" widget="rounded_monetary"/>
                        </group>
                        <group string="Service">
                            <!--    SERVICE REVENUE     -->
                            <field name="x_service_revenue" widget="rounded_monetary"/>
                            <field name="x_service_revenue_tax" string="Tax Type"/>
                            <field name="x_service_revenue_tax_amount" string="Tax" widget="rounded_monetary"/>
                            <field name="x_final_service_revenue" string="Total" widget="rounded_monetary"/>
                            <field name="x_wht_service" string="WHT Tax"/>
                            <field name="x_wht_service_amount" string="WHT Deduction" widget="rounded_monetary"/>
                            <field name="x_gp_on_services" widget="rounded_monetary"/>
                            <!--    TOTAL   -->
                        </group>
                        <group string="Total">
                            <field name="x_commission_percentage"/>
                            <field name="x_total_project_gp" widget="rounded_monetary"/>
                            <field name="x_total_deal_value" widget="rounded_monetary"/>
                            <field name="x_gp"/>
                            <field  name="x_commission" string="Commission" widget="rounded_monetary"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="crm_case_tree_view_oppor_inherit" model="ir.ui.view">
        <field name="name">crm.case.tree.view.oppor.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='contact_name']" position="before">
                <!--    SOLUTION REVENUE    -->
                <field name="x_solution_revenue" widget="rounded_monetary" sum="Solution Revenue"/>
                <field name="x_base_currency_id" optional="hide"/>
                <field name="x_solution_revenue_tax_amount" string="Tax" widget="rounded_monetary"/>
                <field name="x_final_solution_revenue" string="Total" widget="rounded_monetary" sum="Total"/>
                <field name="x_wht_service_amount" string="WHT" widget="rounded_monetary"/>
                <!--    SOLUTION COST   -->
                <field name="x_solution_cost" string="Supplier Cost" widget="rounded_monetary" sum="Supplier Cost"/>
                <field name="x_nrt" widget="rounded_monetary"/>
                <field name="x_gp_on_license" widget="rounded_monetary"/>
                <!--    SERVICE REVENUE     -->
                <field name="x_service_revenue" widget="rounded_monetary" sum="Service Revenue"/>
                <field name="x_service_revenue_tax_amount" string="Tax" widget="rounded_monetary"/>
                <field name="x_final_service_revenue" string="Total" widget="rounded_monetary" sum="Total"/>
                <field name="x_wht_service_amount" string="WHT Deduction" widget="rounded_monetary"/>
                <field name="x_gp_on_services" widget="rounded_monetary"/>
                <!--    TOTAL   -->
                <field name="x_total_project_gp" widget="rounded_monetary" sum="Total Project GP"/>
                <field name="x_total_deal_value" widget="rounded_monetary" sum="Total Deal Value"/>
                <field name="x_gp"/>
                <field name="x_commission" widget="rounded_monetary"/>
            </xpath>
            <!--    HIDING DEFAULT FIELDS   -->
            <xpath expr="//field[@name='contact_name']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='stage_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='expected_revenue']" position="attributes">
                <attribute name="widget">rounded_monetary</attribute>
            </xpath>
        </field>
    </record>
</odoo>
